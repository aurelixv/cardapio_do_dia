<div class="container-fluid">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, for: "email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", placeholder: "Digite o seu e-mail" %>
    </div>

    <div class="form-group">
      <%= f.label "Senha", for: "password" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password", placeholder: "Digite sua senha" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <%= f.submit "Log in", class: "btn btn-primary"%>
  <% end %>

  <%= render "devise/shared/links" %>

</div>