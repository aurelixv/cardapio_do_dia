

  <h2>Cadastro</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if devise_error_messages!.present? %>
      <div class="alert alert-danger" role="alert">
        <p id="notice"><%= devise_error_messages! %></p>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label "Nome", for: "name" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", id: "name", placeholder: "Digite o seu nome" %>
    </div>

    <div class="form-group">
      <%= f.label "Telefone", for: "telephone" %><br />
      <%= f.text_field :telephone , autofocus: true, autocomplete: "telephone", class: "form-control", id: "telephone", placeholder: "Digite o seu telefone" %>
    </div>

    <div class="form-group">
        <%= f.label :email, for: "email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", placeholder: "Digite o seu e-mail" %>
    </div>

    <div class="form-group">
      <%= f.label "Senha", for: "password" %>
      <% if @minimum_password_length %>
      <em>(Tamanho minimo: <%= @minimum_password_length %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password", placeholder: "Digite sua senha" %>
    </div>

    <div class="form-group">
      <%= f.label "Confirme a senha", for: "password_confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password_confirmation", placeholder: "Confirme a sua senha" %>
    </div>

    <div class="actions">
      <%= f.submit "Cadastrar", class: "btn btn-primary btn-block" %>
      <br>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

