<h1>Editar restaurante</h1>

<%= form_with(model: @restaurant, local: true) do |form| %>

  <div class="form-group">
    <%= form.label "Nome", to: "name" %>
    <%= form.text_field :name, class: "form-control", id: "name" %>
  </div>

  <div class="form-group">
    <%= form.label "Descricao", to: "description" %>
    <%= form.text_field :description, class: "form-control", id: "description" %>
  </div>

  <div class="form-group">
    <%= form.label "Telefone", to: "telephone" %>
    <%= form.text_field :telephone, class: "form-control", id: "telephone" %>
  </div>

  <div class="form-group">
    <%= form.label "E-mail" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Endereco" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Culinaria" %>
    <%= form.text_field :food_type, class: "form-control" %>
  </div>

  
  <%= form.submit "Salvar", class: "btn btn-success"%>
  <a href="/restaurant" class="btn btn-secondary">Voltar</a>
  
<% end %>
