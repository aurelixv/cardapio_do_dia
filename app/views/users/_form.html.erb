<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Nome", to: "name" %>
    <%= form.text_field :name, class: "form-control", id: "name" %>
  </div>

  <div class="form-group">
    <%= form.label "Telefone", to: "telephone" %>
    <%= form.text_field :telephone, class: "form-control", id: "telephone" %>
  </div>

  <div class="form-group">
    <%= form.label "E-mail", to: "email" %>
    <%= form.email_field :email, class: "form-control", id: "email" %>
  </div>

  <%= form.submit "Atualizar", class: "btn btn-primary"%>
  <a href="/profile" class="btn btn-secondary">Cancelar</a>
  <a href="" class="btn btn-danger float-right">Apagar</a>

<% end %>
